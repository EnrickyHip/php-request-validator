{
    "name": "enricky/request-validator",
    "description": "HTTP request validator for PHP",
    "version": "2.0.0",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Enricky\\RequestValidator\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Enricky Hip√≥lito",
            "email": "enricky.hipolito@gmail.com"
        }
    ],
    "scripts": {
        "check": "./vendor/bin/phpstan analyse src -l 9",
        "test": "./vendor/bin/pest",
        "test-coverage": "./vendor/bin/pest --coverage"
    },
    "require-dev": {
        "pestphp/pest": "^2.6",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
